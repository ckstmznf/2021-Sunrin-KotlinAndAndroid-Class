<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/moviePost"
        android:layout_width="210dp"
        android:layout_height="0dp"

        android:scaleType="fitXY"
        android:src="@drawable/ani_4"
        app:layout_constraintDimensionRatio="w, 10:7"

        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="너의 이름은"
        android:textSize="16dp"

        app:layout_constraintTop_toBottomOf="@id/moviePost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/moviePost"
        />
    <TextView
        android:id="@+id/movieDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="이 세상 최고의 명작\n신카이마코토 그는 천재야"
        android:textSize="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        app:layout_constraintTop_toBottomOf="@id/movieTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/moviePost"
        />

</androidx.constraintlayout.widget.ConstraintLayout>